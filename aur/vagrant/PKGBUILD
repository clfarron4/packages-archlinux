pkgname=vagrant
pkgver=1.4.2
pkgrel=1
pkgdesc="Tool for building and distributing virtualized development environments"
arch=('i686' 'x86_64')
url="http://vagrantup.com/"
license=('MIT')
options=(!strip)
depends=
optdepends=(
    'net-tools: NFS shared folder support'
    )
source=(https://dl.bintray.com/mitchellh/vagrant/${pkgname}_${pkgver}_${CARCH}.rpm)
[[ "$CARCH" == "x86_64" ]] && sha512sums=('147a14663cf5d011ddf8a2fbe0e83f0ec5ebeb82222e35bd355c1b4c7364421a9545b95031150758f6b4b16af0cce73cecff6cb6fc285560462a2e47a4ba46ad')
[[ "$CARCH" == "i686" ]] && sha512sums=('5579020c5cda92fac31509cfe0b7eb58bf81bbd7bb74845d9b164afad81feaee8a3c31905f5985ddfcbfbb49c999aee49f88be4062bf9f0192c576f13ee8d263')
 
 
package() {
  mv $srcdir/{opt,usr} $pkgdir
}
